<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b6b6b6"
    >

	<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#b6b6b6"
    >
    	
		
	<TableLayout 
	android:layout_width="wrap_content" 
	android:id="@+id/detail_tableLayout" 
	android:layout_height="wrap_content" 
	android:padding="4px">
	
		<TableRow android:background="#FFFFFF">
	    	<TextView  
			android:id="@+id/transit_origin1"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="origin"
		    android:textStyle="bold"
		    android:textColor="#000000"
		    android:background="#FFFFFF"
		    android:textSize="12px"
		    android:paddingLeft="4px"
		    android:paddingRight="4px"
		    />
		    
		</TableRow>
		<TableRow android:paddingTop="2px">
		    <TextView  
			android:id="@+id/transit_destn1"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="destination"
		    android:textStyle="bold"
		    android:textColor="#000000"
		    android:background="#FFFFFF"
		    android:textSize="12px"
		    android:paddingLeft="4px"
		    android:paddingRight="4px"
		    />
		</TableRow>

	</TableLayout>
	
	
		<RelativeLayout 
		android:id="@+id/relativeLayout1" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		
		<ImageButton 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:src="@drawable/time_small" 
		android:id="@+id/transit_button"
		android:layout_alignParentRight="true"
		>
		</ImageButton>
		
		</RelativeLayout>
    
    </LinearLayout>


	<ListView 
		android:id="@+id/RouteListView"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:textColor="#444444"
        android:divider="@drawable/divider"
        android:dividerHeight="1px"
        android:cacheColorHint="#00000000">
	</ListView>
    
	<TextView  
		android:id="@+id/route_instr"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Click row for route details.\nControls on top adjust origin/destination\nand arrival/departure time preferences."
	    android:textStyle="bold"
	    android:textColor="#000000"
	    android:textSize="14px"
	    android:gravity="center"
	    android:paddingTop="10px"
	    />
	
</LinearLayout>
